<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransparentEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/text_view_rectangle</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="WhiteButtonLittleTransparent" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/white_round_button_background</item>
        <item name="android:textColor">#170556</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HomeButton" parent="WhiteButtonLittleTransparent">
        <item name="android:background">@drawable/home_menu_button</item>
        <item name="android:textColor">#170556</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:drawableTint" tools:targetApi="23">@color/colorAccent</item>
    </style>

    <style name="HomeButtonSmallPadding" parent="HomeButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextBiggerBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
