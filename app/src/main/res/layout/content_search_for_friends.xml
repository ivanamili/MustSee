<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SearchForFriendsActivity"
    tools:showIn="@layout/activity_search_for_friends">

    <ListView
        android:layout_width="344dp"
        android:layout_height="418dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/SearchFriendsActivityBtnSearch"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/SearchFriendsActivityBtnSearch"
        style="@style/HomeButtonSmallPadding"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/bluetoothSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>